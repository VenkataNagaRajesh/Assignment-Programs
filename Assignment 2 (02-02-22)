#include <stdio.h>
int factorial(int number);
int main()
{
    int number,result;
    printf("enter the number");
    scanf("%d",&number);
    result=factorial(number);
    printf("the factorial is %d",result);
    return 0;
}
int factorial(int number)
{
    if(number==1)
        return number;
    else
    {
        return number*factorial(number-1);
    }
}
